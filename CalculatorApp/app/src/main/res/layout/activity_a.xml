<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.calculatorapp.ActivityA">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_gravity="center_vertical"
        android:rowCount="2"
        android:columnCount="1"

        android:id="@+id/result_view"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_text_view"
            android:text="Result "
            android:padding="8dp"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"/>

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_reset"
            android:background="@drawable/rounded_button"
            style="@style/PrimaryButton"

            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="Reset" />



    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/operation_btn_view"
        android:rowCount="4"
        android:columnCount="1"
        android:layout_margin="8dp"
        android:layout_gravity="center"

        >
        <Button
            android:id="@+id/add_operation_button"
            android:layout_width="250dp"
            android:layout_gravity="center"



            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            style="@style/PrimaryButton"
            android:text="Add" />

        <Button
            android:id="@+id/sub_operation_button"
            android:layout_width="250dp"
            android:layout_gravity="center"

            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            style="@style/PrimaryButton"
            android:text="Subtract" />
        <Button
            android:id="@+id/mul_operation_button"
            android:layout_width="250dp"
            android:layout_gravity="center"


            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            style="@style/PrimaryButton"
            android:text="Multiply" />

        <Button
            android:id="@+id/division_operation_button"
            android:layout_width="250dp"
            android:layout_gravity="center"

            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            style="@style/PrimaryButton"
            android:text="Division" />





    </GridLayout>
</FrameLayout>
