<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.calculatorapp.ActivityB">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <EditText
            android:layout_width="wrap_content"
            android:minWidth="250dp"
            android:maxWidth="400dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:hint="Enter Value 1"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"

            android:inputType="numberDecimal"
            android:id="@+id/edittext_value1"



            android:textColor="@color/colorBlack"
            />



        <EditText
            android:id="@+id/edittext_value2"
            android:layout_width="wrap_content"
            android:minWidth="250dp"
            android:maxWidth="400dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Enter Value 2"
            android:layout_alignTop="@+id/edittext_value1"
            android:padding="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"


            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_perform"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/edittext_value1"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="20dp"

            android:background="@drawable/rounded_button"
            android:padding="8dp"
            android:text="Perform"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />



    </RelativeLayout>

</RelativeLayout>
